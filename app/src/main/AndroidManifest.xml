<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.angelo.PokeSpeed">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pokespeed_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="com.example.angelo.PokeSpeed.SpeedService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.example.angelo.PokeSpeed.MainActivity"
            android:label="@string/title_activity_main2"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.angelo.PokeSpeed.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>